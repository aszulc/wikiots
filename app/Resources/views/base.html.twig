<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>
        {% block title %}
            WikiOTS
            {% if server is defined %}
                &raquo; {{ server.name }}
            {% endif %}
        {% endblock %}
    </title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/template.css') }}"/>
        <link rel="stylesheet" href="{{ asset('css/w3.css') }}"/>
        <link rel='stylesheet' href='http://fonts.googleapis.com/css?family=Roboto'>
        <link rel="stylesheet" href='http://fonts.googleapis.com/css?family=Oswald' />
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body class="w3-font-roboto">
<header id="site-header">
    <div class="w3-top">
        <div id="site-menu" class="w3-bar w3-dark-grey w3-card">
            <div class="center">
                <div class="w3-bar-item w3-hide-small" id="site-logo">
                    {% block logo %}
                        {% if server is defined %}
                            <a href="/{{ server.link }}" class="link-no-decoration">{{ server.name }}</a>
                        {% else %}
                            Wiki<span class="site-logo-letter-o">O</span><span class="site-logo-letter-t">T</span><span
                                class="site-logo-letter-s">S</span>
                        {% endif %}
                    {% endblock %}
                </div>
                <div id="site-menu" class="w3-right w3-hide-small">
                    {% block menu %}
                        {% if server is defined %}
                            <a href="/" class="w3-bar-item w3-padding-small w3-hide-small link-no-decoration">
                            Wiki<span class="site-logo-letter-o">O</span><span class="site-logo-letter-t">T</span><span
                                class="site-logo-letter-s">S</span>
                        {% endif %}
                        </a>
                        {% for page_key, page in pages %}
                            {% if page is iterable %}
                                <div class="w3-dropdown-hover w3-hide-small">
                                    <button class="w3-padding-large w3-button" title="More">{{ page_key }} <i
                                                class="fa fa-caret-down"></i></button>
                                    <div class="w3-dropdown-content w3-bar-block w3-card-{{ page|length }}">
                                        {% for subpage_key, subpage in page %}
                                            <a href="#" class="w3-bar-item w3-button">{{ subpage }}</a>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% else %}
                                <a href="/" class="w3-bar-item w3-button w3-padding-large w3-hide-small">{{ page }}</a>
                            {% endif %}
                        {% endfor %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
</header>
<div id="site-content">
    <div id="content-header">
        <div id="content-header-text" class="center">Items &raquo; Axe</div>
    </div>
    <div id="content-main" class="">
        <div class="center">
        {% block body %}

        {% endblock %}
        </div>
    </div>
</div>
<footer id="site-footer"></footer>
{% block javascripts %}{% endblock %}
</body>
</html>
